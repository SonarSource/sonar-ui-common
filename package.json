{
  "name": "sonar-ui-common",
  "version": "0.0.2",
  "description": "Common UI lib for SonarQube and SonarCloud",
  "repository": "SonarSource/sonar-ui-common",
  "license": "LGPL-3.0",
  "types": "types.d.ts",
  "dependencies": {
    "classnames": "2.2.6",
    "lodash": "4.17.11",
    "react": "16.8.5",
    "react-dom": "16.8.5"
  },
  "devDependencies": {
    "@types/classnames": "2.2.8",
    "@types/enzyme": "3.9.3",
    "@types/jest": "24.0.13",
    "@types/lodash": "4.14.133",
    "@types/react": "16.8.8",
    "@types/react-dom": "16.8.3",
    "@typescript-eslint/parser": "1.9.0",
    "enzyme": "3.10.0",
    "enzyme-adapter-react-16": "1.14.0",
    "enzyme-to-json": "3.3.5",
    "eslint": "5.16.0",
    "eslint-config-sonarqube": "0.3.0",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-jsx-a11y": "6.2.1",
    "eslint-plugin-promise": "4.0.1",
    "eslint-plugin-react": "7.12.4",
    "eslint-plugin-sonarjs": "0.3.0",
    "jest": "24.8.0",
    "prettier": "1.18.2",
    "react-test-renderer": "16.8.6",
    "ts-jest": "24.0.2",
    "typescript": "3.5.1"
  },
  "scripts": {
    "clean": "rm -rf build/dist",
    "build": "npm run clean && tsc",
    "prepack": "npm run build && git stash && rm -rf components helpers && cp -r ./build/dist/* .",
    "postpack": "cp ./sonar-ui-common-*.tgz ./build && npm run postpublish",
    "postpublish": "git clean -fd && git checkout .",
    "test": "jest",
    "test-coverage": "jest --coverage",
    "test-watch": "jest --watch",
    "format": "prettier --write --list-different \"{,!(build|node_modules)/**/}*.{ts,tsx,css}\"",
    "format-check": "prettier --list-different \"{,!(build|node_modules)/**/}*.{ts,tsx,css}\"",
    "lint": "eslint --ext ts,tsx --quiet \"{,!(build|node_modules)/**/}*.{ts,tsx,css}\"",
    "lint-report": "eslint --ext ts,tsx -f json -o build/eslint-report.json \"{,!(build|node_modules)/**/}*.{ts,tsx,css}\"",
    "ts-check": "tsc --noEmit",
    "validate": "npm run ts-check && npm run lint && npm run format-check && npm run test",
    "validate-ci": "npm run lint-report && npm run format-check && npm run test-coverage"
  },
  "engines": {
    "node": ">=8.6",
    "npm": ">=6.9.0"
  },
  "jest": {
    "coverageDirectory": "<rootDir>/build/coverage",
    "collectCoverageFrom": [
      "{components,helpers}/**/*.{ts,tsx,js}"
    ],
    "coverageReporters": [
      "lcovonly"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "ignoreCodes": [
            151001
          ]
        }
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      "^.+\\.(md|jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/config/jest/FileStub.js",
      "^.+\\.css$": "<rootDir>/config/jest/CSSStub.js"
    },
    "setupFiles": [
      "<rootDir>/config/jest/SetupTestEnvironment.js",
      "<rootDir>/config/jest/SetupEnzyme.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/build",
      "<rootDir>/config",
      "<rootDir>/node_modules",
      "<rootDir>/scripts"
    ],
    "testRegex": "(/__tests__/.*|\\-test)\\.(ts|tsx)$",
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    }
  },
  "prettier": {
    "jsxBracketSameLine": true,
    "printWidth": 100,
    "singleQuote": true
  }
}
