{
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "strictFunctionTypes": false,
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2018", "dom"],
    "outDir": "build/dist",
    "jsx": "react",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "declaration": true,
    "rootDir": "./",
    "baseUrl": ".",
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ]
  },
  "include": ["components", "helpers", "index.ts", "types.d.ts"],
  "exclude": ["**/*-test.*"]
}
